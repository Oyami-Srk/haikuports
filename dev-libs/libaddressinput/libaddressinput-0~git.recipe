SUMMARY="Googleâ€™s postal address library that powering Android and Chromium"
DESCRIPTION="libaddressinput can provide information about \
what input fields are required for a correct address input form for \
any country in the world and can validate an address to highlight \
input errors like missing required fields or invalid values."
HOMEPAGE="https://github.com/googlei18n/libaddressinput"
COPYRIGHT="2014 Google Inc."
LICENSE="Apache v2"
REVISION="1"
srcGitRev="a575c63de328d0c72237c55d1a05e191c245122a"
SOURCE_URI="https://github.com/googlei18n/libaddressinput/archive/$srcGitRev.tar.gz"
CHECKSUM_SHA256="f92b38a0291372aa97306626f2941485bd1c00bd3cc7e242a1cb9fcd50b62212"
SOURCE_FILENAME="libaddressinput-$portVersion-$srcGitRev.tar.gz"
SOURCE_DIR="libaddressinput-$srcGitRev"
googletestVersion="1.8.0"
SOURCE_URI_2="https://github.com/google/googletest/archive/release-$googletestVersion.tar.gz"
CHECKSUM_SHA256_2="58a6f4277ca2bc8565222b3bbd58a177609e9c488e8a72649359ba51450db7d8"
SOURCE_FILENAME_2="gtest-$googletestVersion.tar.gz"
srcGitRev3="b033674"
SOURCE_URI_3="https://chromium.googlesource.com/chromium/src/tools/grit/+archive/$srcGitRev3.tar.gz"
CHECKSUM_SHA256_3="d5a0519983b494f7c5cec5c6e109f52ba33d4f3c47ef52c033b3dcab0cdb7349"
SOURCE_FILENAME_3="grit-$srcGitRev3.tar.gz"

ARCHITECTURES="!x86_gcc2 x86_64"
SECONDARY_ARCHITECTURES="x86"

PROVIDES="
	libaddressinput$secondaryArchSuffix = $portVersion
	lib:libaddressinput$secondaryArchSuffix = portVersion
	"
REQUIRES="
	haiku$secondaryArchSuffix
	lib:libre2$secondaryArchSuffix
	"

PROVIDES_devel="
	libaddressinput${secondaryArchSuffix}_devel
	devel:libaddressinput$secondaryArchSuffix
	"
REQUIRES_devel="
	libaddressinput$secondaryArchSuffix == $portVersion base
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	devel:rapidjson <= 1.1.0
	devel:libgtest$secondaryArchSuffix
	devel:libre2$secondaryArchSuffix
	"
BUILD_PREREQUIRES="
	cmd:c++$secondaryArchSuffix
	cmd:cmp
	cmd:ninja
	cmd:gyp
	"

BUILD()
{
	cp -R $sourceDir3/* externals/grit

	export GYP_DEFINES="
		gtest_dir='$sourceDir2/googletest-release-$googletestVersion/googletest/include'
		gtest_src_dir='$sourceDir2/googletest-release-$googletestVersion/googletest'
		rapidjson_dir='`finddir B_SYSTEM_HEADERS_DIRECTORY`'
		"
	export GYP_GENERATORS='ninja'
	cd cpp
	gyp --depth .
	ninja -C out/Default
}

INSTALL()
{
	install -d $libDir $includeDir/libaddressinput
	install -t $libDir cpp/out/Default/lib/libaddressinput.so
	install -t $includeDir/libaddressinput cpp/include/libaddressinput/*

	prepareInstalledDevelLib libaddressinput
	fixPkgconfig
	packageEntries devel $developDir
}

TEST()
{
	cd $sourceDir/cpp
	./out/Default/unit_tests
}
