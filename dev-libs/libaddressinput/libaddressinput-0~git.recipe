SUMMARY="Googleâ€™s postal address library that powering Android and Chromium"
DESCRIPTION="libaddressinput can provide information about \
what input fields are required for a correct address input form for \
any country in the world and can validate an address to highlight \
input errors like missing required fields or invalid values."
HOMEPAGE="https://github.com/googlei18n/libaddressinput"
COPYRIGHT="2014 Google Inc."
LICENSE="Apache v2"
REVISION="1"
srcGitRev="a575c63de328d0c72237c55d1a05e191c245122a"
SOURCE_URI="https://github.com/googlei18n/libaddressinput/archive/$srcGitRev.tar.gz"
CHECKSUM_SHA256="f92b38a0291372aa97306626f2941485bd1c00bd3cc7e242a1cb9fcd50b62212"
SOURCE_FILENAME="libaddressinput-$portVersion-$srcGitRev.tar.gz"
SOURCE_DIR="libaddressinput-$srcGitRev"

SOURCE_URI_2="https://github.com/google/googletest/archive/release-1.8.0.tar.gz"
CHECKSUM_SHA256_2="58a6f4277ca2bc8565222b3bbd58a177609e9c488e8a72649359ba51450db7d8"
SOURCE_FILENAME_2="gtest-1.8.0.tar.gz"

SOURCE_URI_3="https://chromium.googlesource.com/chromium/src/tools/grit/+archive/b033674.tar.gz"
CHECKSUM_SHA256_3="2e9ef06cb237426be60b4031dff82f414bd9a5ded775c2af1fbac51a7fa345a9"
SOURCE_FILENAME_3="grit.tar.gz"

SOURCE_URI_4="https://github.com/Tencent/rapidjson/archive/master.tar.gz"
CHECKSUM_SHA256_4="e7b3b2ccbeb89fc5b90a06e212d2b31f30496324cf622981ff3fd2f948624ae9"
SOURCE_FILENAME_4="rapidjson.tar.gz"


ARCHITECTURES="?x86_gcc2 x86_64"
SECONDARY_ARCHITECTURES="?x86_gcc2 x86"

PROVIDES="
	libaddressinput$secondaryArchSuffix = $portVersion
	lib:libaddressinput$secondaryArchSuffix
	"
REQUIRES="
	haiku$secondaryArchSuffix
	re2
	"

PROVIDES_devel="
	libaddressinput${secondaryArchSuffix}_devel
	devel:libaddressinput$secondaryArchSuffix
	"
REQUIRES_devel="
	libaddressinput$secondaryArchSuffix == $portVersion base
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	gtest_devel
	re2_devel
	"
BUILD_PREREQUIRES="
	cmd:c++
	cmd:ninja
	cmd:gyp
	"

BUILD()
{
	mv /sources-4/rapidjson-master/* externals/rapidjson
	mv /sources-3/grit-b033674/* externals/grit

	export GYP_DEFINES="
		gtest_src_dir='/sources-2/googletest-release-1.8.0/googletest'
		"
	export GYP_GENERATORS='ninja'
	cd cpp
	gyp --depth .
	ninja -C out/Default
}

INSTALL()
{
	mkdir -p $libDir
	cp -a $sourceDir/cpp/out/Default/lib/libaddressinput.so $libDir
	mkdir -p $includeDir/libaddressinput
	cp $sourceDir/cpp/include/libaddressinput/* $includeDir/libaddressinput
	prepareInstalledDevelLib libaddressinput
	packageEntries devel $developDir
}

TEST()
{
	cd $sourceDir/cpp
	./out/Default/unit_tests
}
